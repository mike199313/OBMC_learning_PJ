-	spin_lock_init(&ssif_bmc->lock);
-
-	init_waitqueue_head(&ssif_bmc->wait_queue);
-	ssif_bmc->request_available = false;
-	ssif_bmc->response_in_progress = false;
-	ssif_bmc->busy = false;
