-{
-	struct ssif_bmc_ctx *ssif_bmc = to_ssif_bmc(file);
-	int ret = 0;
-
-	spin_lock_irq(&ssif_bmc->lock);
-	if (!ssif_bmc->running)
-		ssif_bmc->running = 1;
-	else
-		ret = -EBUSY;
-	spin_unlock_irq(&ssif_bmc->lock);
-
-	return ret;
