From a6a8a1d149f0a599b8153565fec9b06f4e10bdc0 Mon Sep 17 00:00:00 2001
From: Matt Cheng <cheng.matt@inventec.com>
Date: Mon, 24 Jul 2023 15:07:10 +0800
Subject: [PATCH] virtual - Add virtual driver config

---
 drivers/Kconfig         | 2 ++
 drivers/Makefile        | 1 +
 drivers/virtual/Kconfig | 9 +++++++++
 3 files changed, 12 insertions(+)
 create mode 100755 drivers/virtual/Kconfig

diff --git a/drivers/Kconfig b/drivers/Kconfig
index 8d6cd5d08722..1df07c2eca87 100755
--- a/drivers/Kconfig
+++ b/drivers/Kconfig
@@ -239,4 +239,6 @@ source "drivers/most/Kconfig"
 
 source "drivers/peci/Kconfig"
 
+source "drivers/virtual/Kconfig"
+
 endmenu
diff --git a/drivers/Makefile b/drivers/Makefile
index 020780b6b4d2..6cad05a3222f 100755
--- a/drivers/Makefile
+++ b/drivers/Makefile
@@ -188,3 +188,4 @@ obj-$(CONFIG_INTERCONNECT)	+= interconnect/
 obj-$(CONFIG_COUNTER)		+= counter/
 obj-$(CONFIG_MOST)		+= most/
 obj-$(CONFIG_PECI)		+= peci/
+obj-$(CONFIG_VIRTUAL)           += virtual/
diff --git a/drivers/virtual/Kconfig b/drivers/virtual/Kconfig
new file mode 100755
index 000000000000..97f314ced81d
--- /dev/null
+++ b/drivers/virtual/Kconfig
@@ -0,0 +1,9 @@
+menuconfig VIRTUAL
+	tristate "VIRTUAL support"
+	help
+	  This provides virtual driver to create hwmon or else, to simulate driver behavier.
+
+	  If you want this support, you should say Y here.
+
+	  To compile this driver as a module, choose M here: the module will
+	  be called virtual.
\ No newline at end of file
