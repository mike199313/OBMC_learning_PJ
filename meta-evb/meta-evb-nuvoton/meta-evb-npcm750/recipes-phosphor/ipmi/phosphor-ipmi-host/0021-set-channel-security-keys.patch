+   if (keyId == ID_KR)
+       keyfile = KR_FILE;
+   else if (keyId == ID_KG)
+       keyfile = KG_FILE;
+   else
+       return "00000000000000000000";
+
+   std::ifstream chsecuritykey(keyfile, std::ios::in | std::ios::binary);
