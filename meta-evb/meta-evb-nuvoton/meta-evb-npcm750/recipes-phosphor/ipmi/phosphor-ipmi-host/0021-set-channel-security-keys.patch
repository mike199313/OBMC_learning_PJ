+#define SET_KEY 1
+#define LOCKKEY 2
+#define NULLSTR "00000000000000000000"
+#define KEYSIZE 20
+#define KR_FILE "/etc/ipmi_kr"
+#define KG_FILE "/etc/ipmi_kg"
